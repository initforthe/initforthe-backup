  notify_by Campfire do |campfire|
    campfire.on_success = <%= @campfire_on_success %>
    campfire.on_warning = <%= @campfire_on_warning %>
    campfire.on_failure = <%= @campfire_on_failure %>
    <%- if @campfire_api_token -%>
    campfire.api_token = '<%= @campfire_api_token %>'
    <%- end -%>
    <%- if @campfire_subdomain -%>
    campfire.subdomain = '<%= @campfire_subdomain %>'
    <%- end -%>
    <%- if @campfire_room_id -%>
    campfire.room_id   = '<%= @campfire_room_id %>'
    <%- end -%>
  end
