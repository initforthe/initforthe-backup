  notify_by FlowDock do |flowdock|
    flowdock.on_success = <%= @flowdock_on_success %>
    flowdock.on_warning = <%= @flowdock_on_warning %>
    flowdock.on_failure = <%= @flowdock_on_failure %>
    <%- if @flowdock_token -%>
    flowdock.token      = '<%= @flowdock_token %>'
    <%- end -%>
    <%- if @flowdock_from_name -%>
    flowdock.from_name  = '<%= @flowdock_from_name %>'
    <%- end -%>
    <%- if @flowdock_from_email -%>
    flowdock.from_email = '<%= @flowdock_from_email %>'
    <%- end -%>
    <%- if @flowdock_subject -%>
    flowdock.subject    = '<%= @flowdock_subject %>'
    <%- end -%>
    <%- if @flowdock_source -%>
    flowdock.source     = '<%= @flowdock_source %>'
    <%- end -%>
    <%- if @flowdock_tags -%>
    flowdock.tags       = <%= @flowdock_tags %>
    <%- end -%>
    <%- if @flowdock_link -%>
    flowdock.link       = '<%= @flowdock_link %>'
    <%- end -%>
  end
