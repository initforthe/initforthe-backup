  notify_by Slack do |slack|
    <%- if @slack_on_success -%>
    slack.on_success = <%= @slack_on_success %>
    <%- end -%>
    <%- if @slack_on_warning -%>
    slack.on_warning = <%= @slack_on_warning %>
    <%- end -%>
    <%- if @slack_on_failure -%>
    slack.on_failure = <%= @slack_on_failure %>
    <%- end -%>
    <%- if @slack_webhook_url -%>
    slack.webhook_url = '<%= @slack_webhook_url %>'
    <%- end -%>
    <%- if @slack_channel -%>
    slack.channel = '<%= @slack_channel %>'
    <%- end -%>
    <%- if @slack_username -%>
    slack.username = '<%= @slack_username %>'
    <%- end -%>
    <%- if @slack_icon_emoji -%>
    slack.icon_emoji = '<%= @slack_icon_emoji %>'
    <%- end -%>
  end
