  notify_by Zabbix do |zabbix|
    zabbix.on_success = <%= @zabbix_on_success %>
    zabbix.on_warning = <%= @zabbix_on_warning %>
    zabbix.on_failure = <%= @zabbix_on_failure %>
    <%- if @zabbix_host -%>
    zabbix.zabbix_host  = '<%= @zabbix_host %>'
    <%- end -%>
    <%- if @zabbix_port -%>
    zabbix.zabbix_port  = <%= @zabbix_port %>
    <%- end -%>
    <%- if @zabbix_service_name -%>
    zabbix.service_name = '<%= @zabbix_service_name %>'
    <%- end -%>
    <%- if @zabbix_service_host -%>
    zabbix.service_host = '<%= @zabbix_service_host %>'
    <%- end -%>
    <%- if @zabbix_item_key -%>
    zabbix.item_key     = '<%= @zabbix_item_key %>'
    <%- end -%>
  end
